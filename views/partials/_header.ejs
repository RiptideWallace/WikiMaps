    <header class="container page-header">
      <nav class="navbar navbar-static-top">
        <img class="navbar-brand navbar-left" src="/images/WM Logo.png" alt="WikiMaps Logo">
        <a class="navbar-brand index-link" href="/">WikiMaps</a>
        <% if (userId) { %>
          <form action="/logout" method="POST">
            <input type="submit" value="Logout">
          </form>
        <% } else { %>
          <p class="navbar-text navbar-right"><a href="/login">Login</a> or <a href="/register">Register</a></p>
        <% } %>
      </nav>
    </header>
