<!-- views/user.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <title>WikiMaps: User Profile</title>
    <% include partials/_head.ejs %>
    <script type="text/javascript" src="/scripts/user_profile.js"></script>

  </head>
  <body>

    <% include partials/_header.ejs %>

    <div class="container main-container">
      <input type="hidden" id="user-profile-id" value="<%=user.id%>">
      <h1>Welcome to <%= user.name %>'s profile</h1>
    </div>
    <h2>Maps that <%=user.name%> has contributed to:</h2>
    <div class="container main-container">
      <div class="maps-container"></div>
    </div>
    <h2>Maps that <%=user.name%> has favourited:</h2>
    <div class="container fav-main-container">
      <div class="fav-maps-container"></div>
    </div>

    <% include partials/_footer.ejs %>

  </body>
</html>
